<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, @username"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:nestedScrollingEnabled="false"
            android:textSize="20dp"
            android:textColor="#ff060c"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New message"
            android:id="@+id/newMsgButton"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="82dp"
            android:clickable="true"
            android:onClick="onClick"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View inbox"
            android:id="@+id/inboxButton"
            android:layout_below="@+id/newMsgButton"
            android:layout_alignStart="@+id/newMsgButton"
            android:layout_marginTop="32dp"
            android:layout_alignEnd="@+id/newMsgButton"
            android:clickable="true"
            android:onClick="onClick"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacts list"
            android:id="@+id/contactsButton"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/inboxButton"
            android:layout_alignStart="@+id/inboxButton"
            android:layout_alignEnd="@+id/inboxButton"
            android:clickable="true"
            android:onClick="onClick"/>
</RelativeLayout>